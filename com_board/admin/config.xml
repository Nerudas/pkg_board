<?xml version="1.0"?>
<config>
	<fieldset name="global" label="JGLOBAL_FIELDSET_OPTIONS">
		<field name="sef_advanced" type="hidden" default="1"/>
		<field name="items_limit" type="list"
			   label="COM_BOARD_PARAMS_ITEMS_LIMIT"
			   default="10">
			<option value="5">J5</option>
			<option value="10">J10</option>
			<option value="15">J15</option>
			<option value="20">J20</option>
			<option value="25">J25</option>
			<option value="30">J30</option>
			<option value="50">J50</option>
			<option value="100">J100</option>
			<option value="0">JALL</option>
		</field>
		<field name="search_placeholder" type="text"
			   label="COM_BOARD_PARAMS_SEARCH_PLACEHOLDER"
			   class="input-xlarge"
			   size="40"/>
		<field name="list_layout" type="componentlayout"
			   label="COM_BOARD_PARAMS_LIST_LAYOUT"
			   extension="com_board"
			   view="list"/>
		<field name="item_layout" type="componentlayout"
			   label="COM_BOARD_PARAMS_ITEM_LAYOUT"
			   extension="com_board"
			   view="item"/>
		<field name="form_layout" type="componentlayout"
			   label="COM_BOARD_PARAMS_FORM_LAYOUT"
			   extension="com_board"
			   view="form"/>
		<field name="map_layout" type="componentlayout"
			   label="COM_BOARD_PARAMS_MAP_LAYOUT"
			   extension="com_board"
			   view="map"/>
	</fieldset>
	<fieldset name="placemark" label="COM_BOARD_PARAMS_PLACEMARK">
		<fields name="placemark">
			<fields name="iconShape">
				<field name="type" type="list"
					   label="COM_BOARD_PARAMS_PLACEMARK_ICONSHAPE_TYPE"
					   default="Polygon">
					<option value="">JNONE</option>
					<option value="Rectangle">COM_BOARD_PARAMS_PLACEMARK_ICONSHAPE_TYPE_RECTANGLE</option>
					<option value="Circle">COM_BOARD_PARAMS_PLACEMARK_ICONSHAPE_TYPE_CIRCLE</option>
					<option value="Polygon">COM_BOARD_PARAMS_PLACEMARK_ICONSHAPE_TYPE_POLYGON</option>
				</field>

				<field name="coordinates" type="text"
					   label="COM_BOARD_PARAMS_PLACEMARK_ICONSHAPE_COORDINATES"
					   class="input-xxlarge"
					   default="[[[-24, -48],[300, -48],[24, -8],[24, -8],[0, 0],[-24, -10],[-24, -10]]]"/>
			</fields>
			<field name="customLayout" type="editor"
				   label="COM_BOARD_PARAMS_PLACEMARK_LAYOUT"
				   description="COM_BOARD_PARAMS_PLACEMARK_DESCRIPTION"
				   default="&lt;style&gt;[data-board-placemark]{display:block;position:relative;width:48px;height:48px;margin-top:-48px;margin-left:-24px;color:inherit}[data-board-placemark] .title{position:absolute;top:0;left:48px;background:#fff;line-height:30px;max-width:150px;text-overflow:ellipsis;padding:0 5px;border:1px solid #e5e5e5;white-space:nowrap;overflow:hidden;font-size:14px;box-sizing:border-box}[data-board-placemark][data-viewed=&quot;true&quot;]{width:32px;height:32px;margin-top:-32px;margin-left:-16px;color:inherit;opacity:.75}[data-board-placemark][data-viewed=&quot;true&quot;] img{width:32px;height:32px}[data-board-placemark][data-viewed=&quot;true&quot;] .title{left:32px;line-height:15px;font-size:12px;padding:0 3px}&lt;/style&gt;&lt;div data-board-placemark=&quot;{id}&quot; class=&quot;placemark&quot; data-viewed=&quot;false&quot;&gt;&lt;img src=&quot;/media/com_board/images/placemark.png&quot; alt=&quot;{title}&quot;&gt;&lt;div class=&quot;title&quot;&gt;{title}&lt;/div&gt;&lt;/div&gt;"
				   filter="JComponentHelper::filterText"/>
		</fields>
	</fieldset>
	<fieldset name="cluster" label="COM_BOARD_PARAMS_CLUSTER">
		<fields name="cluster">
			<field name="gridSize" type="number"
				   label="COM_BOARD_PARAMS_CLUSTER_GRIDSIZE"
				   default="120"/>
			<field name="minClusterSize" type="number"
				   label="COM_BOARD_PARAMS_CLUSTER_MINCLUSTERSIZE"
				   default="2"/>
			<fields name="icon">
				<field name="href" type="media"
					   label="COM_BOARD_PARAMS_CLUSTER_ICON"
					   class="input-large"
					   default="media/com_board/images/cluster.png"/>
				<field name="size" type="text"
					   label="COM_BOARD_PARAMS_CLUSTER_ICON_SIZE"
					   default="[64,64]"/>
				<field name="offset" type="text"
					   label="COM_BOARD_PARAMS_CLUSTER_ICON_OFFSET"
					   default="[-32,-32]"/>
			</fields>
			<field name="numberColor" type="color"
				   label="COM_BOARD_PARAMS_CLUSTER_NUMBERCOLOR"
				   default="#ffffff"/>
			<field name="clickOpacity" type="text"
				   label="COM_BOARD_PARAMS_CLUSTER_CLICKOPACITY"
				   class="input-xsmall"
				   default="0.75"/>
		</fields>
	</fieldset>

	<fieldset name="permissions"
			  label="JCONFIG_PERMISSIONS_LABEL"
			  description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules"
			   label="JCONFIG_PERMISSIONS_LABEL"
			   class="inputbox"
			   validate="rules"
			   filter="rules"
			   component="com_board"
			   section="component"/>
	</fieldset>
</config>
