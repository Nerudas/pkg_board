<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="component" method="upgrade">
	<name>COM_BOARD</name>
	<author>Nerudas</author>
	<creationDate>July 2018</creationDate>
	<copyright>Copyright (c) 2015 - 2018 Nerudas. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@nerudas.ru</authorEmail>
	<authorUrl>nerudas.ru</authorUrl>
	<version>1.1.0</version>
	<description>COM_BOARD_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>board.php</filename>
		<filename>router.php</filename>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_board.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_board.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_board.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.com_board.sys.ini</language>
	</languages>
	<administration>
		<menu>COM_BOARD</menu>
		<submenu>
			<menu option="com_board" view="items">COM_BOARD_ITEMS</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>board.php</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_board.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_board.sys.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_board.ini</language>
			<language tag="ru-RU">language/ru-RU/ru-RU.com_board.sys.ini</language>
		</languages>
	</administration>
	<media destination="com_board" folder="media">
		<folder>css</folder>
	</media>
</extension>